{
  "colors": {
    "background": "#FAF9F6",
    "text": "#111111",
    "heading": "#0A0A23",
    "accent": "#001AFF",
    "muted": "#666666",
    "white": "#FFFFFF",
    "placeholder": "#DDDDDD"
  },
  "typography": {
    "fontFamily": "'IBM Plex Mono', monospace",
    "headingWeight": 700,
    "bodyWeight": 400,
    "sizes": {
      "h1": "2.5rem",
      "h2": "2rem",
      "h3": "1.5rem",
      "body": "1rem",
      "small": "0.875rem"
    }
  },
  "layout": {
    "maxWidth": "1200px",
    "padding": "2rem",
    "gridGap": "2rem",
    "columns": 2
  },
  "components": {
    "card": {
      "background": "#FFFFFF",
      "borderRadius": "8px",
      "padding": "1.5rem",
      "shadow": "0 2px 8px rgba(0,0,0,0.05)"
    },
    "button": {
      "background": "#001AFF",
      "color": "#FFFFFF",
      "borderRadius": "4px",
      "padding": "0.75rem 1.25rem",
      "fontWeight": 600
    },
    "placeholder": {
      "background": "#DDDDDD",
      "width": "100%",
      "height": "250px",
      "borderRadius": "8px"
    }
  }
}
